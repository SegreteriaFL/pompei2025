# Evita stranezze di content negotiation di Apache
Options -MultiViews

# 404 dedicata del sottosito
ErrorDocument 404 /pompei2025/404.html

# Forza UTF-8 per i file testuali (l'HTML ha gi√† <meta charset="utf-8">)
AddDefaultCharset utf-8

<IfModule mod_mime.c>
  AddType application/javascript .js
  AddType text/css .css
  AddType image/svg+xml .svg
  AddType font/woff2 .woff2
</IfModule>

# Cache: lunghissima per asset versionati, breve per HTML
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/html "access plus 1h"
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
  # Cache-Control coerente con Expires
  <FilesMatch "\.(css|js|png|jpe?g|webp|svg|woff2)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  <FilesMatch "\.(html?)$">
    Header set Cache-Control "public, max-age=3600"
  </FilesMatch>

  # Security headers di base (non aggressivi)
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
  # CSP minimale: consenti solo stesso dominio e data: per img
  Header set Content-Security-Policy "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self'; font-src 'self' data:;"
</IfModule>

# Compressione gzip
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/css application/javascript application/json image/svg+xml
</IfModule>

# Evita che WordPress in root intercetti le richieste mancanti del sottosito
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /pompei2025/
  # Se il file o la cartella esiste, servilo
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Altrimenti mostra 404 del sottosito (non reindirizzare al WP root)
  RewriteRule . /pompei2025/404.html [L]
</IfModule>
